{
  "name": "consequences",
  "description": "",
  "author": "Joseph Duffy",
  "version": "0.1.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run build",
    "start": "nodemon",
    "build": "tsc",
    "build:watch": "npm run build -- -w",
    "lint": "tslint 'src/**/*.ts' --exclude 'src/**/*.d.ts' --type-check --project ./tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha ./src/**/__tests__/*.ts --require ts-node/register --require source-map-support/register",
    "test:watch": "npm run test -- -w",
    "test:coverage": "nyc npm run test",
    "coveralls": "npm run test:coverage; nyc report --reporter=text-lcov | coveralls"
  },
  "license": "MIT",
  "repository": "git+https://github.com/JosephDuffy/consequences",
  "dependencies": {
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger-winston": "^0.0.2",
    "koa-router": "^7.2.1",
    "lokijs": "^1.5.0",
    "mz": "^2.6.0",
    "reflect-metadata": "^0.1.10",
    "routing-controllers": "^0.7.2",
    "typedi": "^0.6.0",
    "uuid": "^3.1.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "^7.1.0",
    "@types/core-js": "^0.9.43",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.24",
    "@types/koa-router": "^7.0.23",
    "@types/lokijs": "^1.2.30",
    "@types/mocha": "^2.2.44",
    "@types/mz": "^0.0.32",
    "@types/node": "^9.3.0",
    "@types/sinon": "^4.1.2",
    "@types/uuid": "^3.4.2",
    "@types/winston": "^2.3.5",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.0",
    "nyc": "^11.4.1",
    "sinon": "^4.1.3",
    "source-map-support": "^0.5.0",
    "stub-spawn-once": "^2.3.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.7.0",
    "tslint-misc-rules": "^3.2.0",
    "tslint-no-unused-expression-chai": "^0.0.3",
    "typescript": "^2.5.2"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/__tests__/*"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  }
}
