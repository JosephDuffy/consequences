{
  "name": "consequences",
  "description": "",
  "author": "Joseph Duffy",
  "version": "0.1.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run build",
    "start": "nodemon",
    "build": "tsc",
    "build:watch": "npm run build -- -w",
    "lint": "tslint 'src/**/*.ts' --exclude 'src/**/*.d.ts' --type-check --project ./tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "coveralls": "npm run test:coverage; cat ./coverage/lcov.info | coveralls"
  },
  "license": "MIT",
  "repository": "git+https://github.com/JosephDuffy/consequences",
  "dependencies": {
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger-winston": "^0.0.2",
    "koa-router": "^7.2.1",
    "lokijs": "^1.5.0",
    "mz": "^2.6.0",
    "reflect-metadata": "^0.1.10",
    "routing-controllers": "^0.7.2",
    "typedi": "^0.8.0",
    "uuid": "^3.1.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/core-js": "^2.5.0",
    "@types/jest": "^23.3.1",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-router": "^7.0.23",
    "@types/lokijs": "^1.2.30",
    "@types/mz": "^0.0.32",
    "@types/node": "^10.5.4",
    "@types/sinon": "^5.0.0",
    "@types/uuid": "^3.4.2",
    "@types/winston": "^2.3.5",
    "coveralls": "^3.0.0",
    "jest": "^23.4.2",
    "nodemon": "^1.18.7",
    "sinon": "^6.0.1",
    "stub-spawn-once": "^2.3.0",
    "ts-jest": "^23.0.1",
    "tslint": "^5.7.0",
    "tslint-misc-rules": "^3.2.0",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.ts$",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/*.d.ts",
      "!**/__tests__/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
